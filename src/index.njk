---
title: Freelance Web Developer in Northern VA
layout: 'base.njk'
image: '/logo/Social-Media-Cover.png'
description: Full stack freelance web developer in Northern Virginia helping nonprofits and Catholic businesses build modern, mission-driven websites that inspire action.
---
 
<!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="hero-grid">
        <div class="hero-content">
          <h1>{{ hero.name }}</h1>
          <h2>{{ hero.greeting }}</h2>
          <p>{{ hero.description }}</p>
          <p>I help <strong><span id="hero-text"></span></strong> create websites that work — and look — great.</p>
          <div class="hero-buttons">
            <a href="{{ hero.firstCtaUrl }}" class="btn btn-primary">{{ hero.firstCtaText }}</a>
            <a href="{{ hero.secondCtaUrl }}" class="btn btn-outline">{{ hero.secondCtaText }}</a>
          </div>
        </div>
        <div class="hero-image">
          <div class="profile-image-container">
            <img src="{{ hero.image }}" alt="John Lilly" class="profile-image">
          </div>
        </div>
      </div>
    </div>
  </section>


  <!-- About Me Section -->
  <section id="about" class="about-section">
    <div class="container">
      <div class="about-grid">
        <div class="about-image">
          <img src="{{ about.image }}" alt="John Lilly">
        </div>
        <div class="about-content">
          <h2>{{ about.heading }}</h2>
          <div class="about-text">
            {% for p in about.description %}
              <p>{{ p }}</p>
            {% endfor %}
          </div>
          <div>
            <a href="{{ about.ctaUrl }}" class="btn btn-primary">{{ about.ctaText }}</a>
          </div>
        </div>
      </div>
    </div>
  </section>

<!-- Services Section -->
 <section id="services">
  <div class="container">
    <h2>{{ services.title }}</h2>
    <p>{{ services.subtitle }}</p>

    <div class="services-grid">
      {% for card in services.cards %}
        <div class="services-card">
          <div class="services-header">
            <i data-lucide="{{ card.icon }}"></i>
            <h3>{{ card.title }}</h3>
          </div>
          <p>{{ card.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>


  <!-- Projects Section -->
  <section id="projects" class="alternate-section">
    <div class="container">
      <div class="section-header">
         <h2>Projects</h2>
        <a href="/projects">View All </a>
      </div>
      <div class="projects-grid">
        {%- for project in collections.homepage.slice(0, 4) | reverse -%}
          {% include 'projects-snippet.njk' %}
        {%- endfor -%}
      </div>
    </div>
  </section>

<!-- Blog Section -->
  <section id="blog" class="blog-section">
    <div class="container">
      <div class="section-header">
        <h2>Blog</h2>
        <a href="/blog">View All </a>
      </div>
      <div class="blog-grid">
        {%- for post in collections.featured.slice(0, 6) | reverse -%}
          {% include 'article-snippet.njk' %}
        {%- endfor -%}
      </div>
    </div>
  </section>

  <!-- Skills Section -->
  <section id="skills" class="alternate-section">
    <div class="container">
      <h2>Skills & Expertise</h2>
        <div class="skills-grid">
          {% for skill in collections.skills %}
            {% include 'skills-snippet.njk' %}
          {% endfor %}
        </div>
      </div>
    </div>
  </section>

  <!-- Contact CTA Section -->
  <section class="contact-cta-section">
    <div class="container">
      <div class="contact-cta-content">
        <h2>Let's Work Together</h2>
        <p>Have a project in mind or just want to say hello? I'd love to hear from you!</p>
        <a href="/contact" class="btn btn-primary btn-lg">Get in Touch</a>
      </div>
    </div>
  </section>