 <article class="card-post">
          <div class="card-header">
        <span class="card-category">
              {%- for tag in post.data.tags -%}
                {%- if tag != "post" and tag != "featured" -%}
                  {{ tag }}
                {%- endif -%}
              {%- endfor -%}
            </span>            
            <div class="card-meta">
              <i data-lucide="calendar"></i>
             <time datetime="{{ post.data.date }}">{{ post.data.date | postDate }}</time>
            </div>
          </div>
          <div class="card-image">
            <img src="/assets/blog/article-1.jpg" alt="Performance optimization">
          </div>
          <div class="card-content">
              <a href="{{ post.url }}"><h3>{{ post.data.title }}</h3></a>
              <p class="card-intro">{{ description }}</p>
                <a href="{{ post.url }}">Read More <i class="fas fa-chevron-right"></i></a>
          </div>
</article>