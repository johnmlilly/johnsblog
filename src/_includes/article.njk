---
layout: 'base.njk'
---
<article class="main-article">
<div class="container container--narrow flow">
  <div>
    <div>
      <span class="snippet__date">{{ date | postDate }} // {{ content | emojiReadTime }}</span> 
      <h1 class="article-title">
      {{ title }}
    </h1>
     <p class="snippet__meta">
      {{ author }}
      </p>
    <ul class="snippet__tags">
      {% for tag in tags %}
        {% if tag != 'post' and tag != 'featured' %}
          <li>{{ tag }}</li>
        {% endif %}
      {% endfor %}
    </ul>
    </div>
    <div>
      <figure class="main-article__figure">
      <img class="article-image" src="/assets{{ image }}" alt="{{ imageAlt }}">
    </figure>
    </div>
  </div>
    {{ content | safe }}
</div>
{% cloneWarsQuote %}
</article>